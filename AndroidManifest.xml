<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tpcstld.jetris"
    android:versionCode="10"
    android:versionName="1.0.4a" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name="com.tpcstld.jetris.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tpcstld.jetris.StartGameActivity"
            android:label="@string/title_activity_jetris_main"
            android:parentActivityName="com.tpcstld.jetris.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tpcstld.jetris.MainActivity" />
        </activity>
        <activity
            android:name="com.tpcstld.jetris.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.tpcstld.jetris.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tpcstld.jetris.MainActivity" />
        </activity>
        <activity
            android:name="com.tpcstld.jetris.InstructionsActivity"
            android:label="@string/title_activity_instructions"
            android:parentActivityName="com.tpcstld.jetris.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tpcstld.jetris.MainActivity" />
        </activity>
        <activity
            android:name="com.tpcstld.jetris.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.tpcstld.jetris.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tpcstld.jetris.MainActivity" />
        </activity>
    </application>

</manifest>